# ============================================================================
# HighForce - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your credentials
# SECURITY: Never commit .env to version control!
# ============================================================================

# ============================================================================
# SERVER
# ============================================================================
ENVIRONMENT=development  # development, staging, production
PORT=8080
DEBUG=true

# ============================================================================
# SUPABASE (Unified Database - ONE instance for everything!)
# ============================================================================
# Get these from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_KEY=your_service_key_here

# Direct database URL (for psycopg)
DATABASE_URL=postgresql://postgres:[password]@db.your-project.supabase.co:5432/postgres

# ============================================================================
# QDRANT (Vector Database)
# ============================================================================
# Get from: https://cloud.qdrant.io
QDRANT_URL=https://your-cluster.qdrant.io
QDRANT_API_KEY=your_api_key_here
QDRANT_COLLECTION_NAME=company_documents

# ============================================================================
# REDIS (Job Queue)
# ============================================================================
# Upstash: https://console.upstash.com
# Or Redis Cloud: https://app.redislabs.com
REDIS_URL=redis://default:password@host:port

# ============================================================================
# OPENAI (LLM + Embeddings)
# ============================================================================
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# ============================================================================
# NANGO (OAuth Proxy)
# ============================================================================
# Get from: https://app.nango.dev
NANGO_SECRET_KEY=your_secret_key_here

# Provider keys (configured in Nango dashboard)
NANGO_PROVIDER_KEY_GMAIL=google-mail
NANGO_PROVIDER_KEY_OUTLOOK=outlook
NANGO_PROVIDER_KEY_GOOGLE_DRIVE=google_drive
NANGO_PROVIDER_KEY_QUICKBOOKS=quickbooks

# ============================================================================
# SENTRY (Error Tracking) - Optional
# ============================================================================
# Get from: https://sentry.io
SENTRY_DSN=https://...@sentry.io/...

# ============================================================================
# GOOGLE CLOUD (OCR) - Optional
# ============================================================================
# For OCR on images (Tesseract fallback available)
# GOOGLE_CLOUD_CREDENTIALS_JSON={"type":"service_account",...}

# ============================================================================
# CORS (Frontend URLs)
# ============================================================================
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://app.highforce.ai

# ============================================================================
# RATE LIMITING
# ============================================================================
# Requests per hour per endpoint
RATE_LIMIT_SEARCH=100
RATE_LIMIT_SYNC=100
RATE_LIMIT_CHAT=100

# ============================================================================
# SPAM FILTERING
# ============================================================================
ENABLE_SPAM_FILTERING=true
SPAM_FILTER_BATCH_SIZE=10

# ============================================================================
# OPTIONAL SETTINGS
# ============================================================================
# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# LlamaIndex
SEMAPHORE_LIMIT=10  # Concurrency limit for embeddings

# Admin Dashboard
ADMIN_SESSION_DURATION=3600  # 1 hour in seconds
# ADMIN_IP_WHITELIST=192.168.1.1,10.0.0.1  # Comma-separated (optional)
